<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/AllMatchParent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@id/tv_maps_header" android:text="@string/dashboard_title_bcr_location" style="@style/ScreenHeader" />
    <include android:id="@id/view_location_footer" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/location_footer" />
    <ViewFlipper android:id="@id/view_flipper_map" android:layout_above="@id/view_location_footer" android:layout_below="@id/tv_maps_header" style="@style/AllMatchParent">
        <RelativeLayout style="@style/AllMatchParent">
            <RelativeLayout android:id="@id/view_search_layout" android:background="@drawable/header_footer" android:layout_alignParentTop="true" style="@style/MatchParentWrapContent">
                <Button android:id="@id/btn_cancel" android:visibility="gone" android:layout_marginRight="2.0dip" android:text="@string/cancel_action_title" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/ButtonStyleSmall" />
                <include android:id="@id/view_search" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@id/btn_cancel" android:layout_centerVertical="true" layout="@layout/search_view" />
            </RelativeLayout>
            <FrameLayout android:layout_below="@id/view_search_layout" android:layout_alignParentBottom="true" style="@style/AllMatchParent">
                <at.spardat.bcrmobile.view.layout.bcrlocation.ATMMapLocationCustomMapView android:enabled="true" android:id="@id/map_view" android:clickable="true" android:apiKey="@string/map_api_key" style="@style/AllMatchParent" />
                <LinearLayout android:gravity="center" android:layout_gravity="right" android:id="@id/view_map_progress_container" android:background="@color/map_progress_background" android:padding="5.0dip" android:visibility="gone" style="@style/MatchParentWrapContent">
                    <ProgressBar android:id="@id/progress_bar_map" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleSmall" />
                    <TextView android:textColor="@color/text_view_color" android:id="@id/tv_loading_msg" android:layout_marginLeft="3.0dip" style="@style/TextSmallNormalAllWrap" />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout style="@style/AllMatchParent">
            <include android:id="@id/view_progress_view_container" android:visibility="gone" style="@style/AllMatchParent" layout="@layout/data_loading_progress_view" />
            <LinearLayout android:orientation="horizontal" android:id="@id/view_tab_container" style="@style/AllMatchParent" />
        </RelativeLayout>
    </ViewFlipper>
</RelativeLayout>