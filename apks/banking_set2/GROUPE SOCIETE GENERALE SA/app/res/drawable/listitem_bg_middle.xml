<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/stroke_color" />
                </shape>
            </item>
            <item android:left="@dimen/stroke_width" android:right="@dimen/stroke_width" android:bottom="@dimen/stroke_width">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/pressed_top" android:endColor="@color/pressed_bottom" android:angle="270.0" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/stroke_color" />
                </shape>
            </item>
            <item android:left="@dimen/stroke_width" android:right="@dimen/stroke_width" android:bottom="@dimen/stroke_width">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/pressed_top" android:endColor="@color/pressed_bottom" android:angle="270.0" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/stroke_color" />
                </shape>
            </item>
            <item android:left="@dimen/stroke_width" android:right="@dimen/stroke_width" android:bottom="@dimen/stroke_width">
                <shape android:shape="rectangle">
                    <gradient android:startColor="@color/bg_white" android:endColor="@color/bg_buttoninlist" android:angle="270.0" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>