                </shape>
            </item>
            <item android:top="@dimen/stroke_width" android:right="@dimen/stroke_width" android:bottom="@dimen/stroke_width">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="1.0dip" android:topRightRadius="@dimen/radius_inner" android:bottomLeftRadius="@dimen/right_rounded_bottom_left_radius" android:bottomRightRadius="@dimen/right_rounded_bottom_right_radius" />
