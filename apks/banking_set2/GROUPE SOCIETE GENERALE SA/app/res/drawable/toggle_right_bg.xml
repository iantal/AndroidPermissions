<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:topLeftRadius="1.0dip" android:topRightRadius="@dimen/radius_outer" android:bottomLeftRadius="@dimen/right_rounded_bottom_left_radius" android:bottomRightRadius="@dimen/right_rounded_bottom_right_radius" />
