<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/grey_ea" />
            <stroke android:width="@dimen/creditButtonStroke" android:color="@color/grey_90" />
            <corners android:radius="@dimen/creditButtonCornerRadius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/creditButtonStroke" android:color="@color/grey_90" />
            <corners android:radius="@dimen/creditButtonCornerRadius" />
        </shape>
    </item>
</selector>