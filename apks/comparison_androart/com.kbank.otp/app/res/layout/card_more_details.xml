<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:background="#ffececec" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:background="#ffececec" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:id="@id/info_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <RelativeLayout android:id="@id/top_panel" android:background="@color/top_panel" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/top_panel_height">
                <ImageButton android:id="@id/menu" style="@style/MenuStyle" />
                <TextView android:text="@string/title_atm_details" style="@style/CaptionStyle" />
            </RelativeLayout>
            <LinearLayout android:layout_marginTop="10.0dip" style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_next_payment_date" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_next_payment_date" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_interest" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_interest" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_granted_limit" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_granted_limit" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_minim_payment" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_minim_payment" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_not_payed_amount" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_not_payed_amount" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_limit_used" android:maxLines="2" android:singleLine="false" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_limit_used" style="@style/CardDetailValueStyle" />
            </LinearLayout>
            <LinearLayout style="@style/CardDetailLayoutStyle">
                <TextView android:text="@string/card_extract_date" style="@style/CardDetailKeyStyle.More" />
                <TextView android:id="@id/card_extract_date" style="@style/CardDetailValueStyle" />
            </LinearLayout>
        </LinearLayout>
        <ProgressBar android:id="@id/progress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" />
    </RelativeLayout>
</ScrollView>