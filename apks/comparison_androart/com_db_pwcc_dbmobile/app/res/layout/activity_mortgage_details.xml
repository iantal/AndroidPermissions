<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@color/screen_background_color" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <include android:id="@id/db_toolbar_view" layout="@layout/db_toolbar" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/db_toolbar_view">
        <LinearLayout android:orientation="horizontal" android:id="@id/details_header_container" android:paddingTop="@dimen/mortgage_details_header_vertical_spacing" android:paddingBottom="@dimen/mortgage_details_header_vertical_spacing" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginStart="@dimen/mortgage_details_header_left_margin" android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <com.db.pwcc.dbmobile.mortgages.views.MortgageProgressChart android:id="@id/details_progress_chart" android:layout_width="@dimen/mortgage_details_donut_dimension" android:layout_height="@dimen/mortgage_details_donut_dimension" app:pcTitleSize="@dimen/mortgage_details_progress_char_text_size" app:pcTitleColor="@color/textColorDefault" app:pcInnerContent="labels" app:pcStyle="normal" />
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="@dimen/progress_chart_inner_padding" android:layout_marginBottom="@dimen/progress_chart_inner_padding" android:layout_marginStart="@dimen/mortgage_details_header_horizontal_spacing">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_description_big" android:textColor="@color/labelViewTextColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/details_current_balance" />
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_value_big" android:textColor="@color/textColorDefault" android:id="@id/details_current_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mortgage_details_label_text_spacing" android:layout_marginBottom="@dimen/mortgage_details_header_text_category_spacing" android:lines="1" android:singleLine="true" />
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_description_small" android:textColor="@color/labelViewTextColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mortgage_details_header_text_category_spacing" android:text="@string/details_original_amount" />
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_value_small" android:textColor="@color/textColorDefault" android:id="@id/details_original_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mortgage_details_label_text_spacing" android:lines="1" android:singleLine="true" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View android:id="@id/mortgages_details_header_separator" android:visibility="gone" android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_marginTop="@dimen/mortgage_details_margin_vertical_spacing" android:layout_marginRight="@dimen/activity_horizontal_margin" style="@style/Separator.Transparent" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="@dimen/activity_horizontal_margin" android:layout_marginRight="@dimen/activity_horizontal_margin">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mortgage_details_category_spacing">
                <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_description_small" android:textColor="@color/labelViewTextColor" android:id="@id/details_iban_label" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/details_iban" />
                    <com.db.pwcc.dbmobile.foundation.widgets.DbTextView android:textSize="@dimen/mortgage_details_value_small" android:textColor="@color/textColorDefault" android:id="@id/details_iban" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                </LinearLayout>
                <android.support.v7.widget.RecyclerView android:id="@id/mortgages_properties_container" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                <View android:id="@id/mortgages_details_footer_separator" android:visibility="gone" android:layout_marginTop="@dimen/mortgage_details_category_spacing" android:layout_marginBottom="@dimen/mortgage_details_category_spacing" style="@style/Separator.Transparent" />
                <com.db.pwcc.dbmobile.mortgages.views.WrappedWidthTextView android:textSize="@dimen/mortgage_details_description_big" android:textColor="@color/labelViewTextColor" android:id="@id/details_repayment" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="@dimen/mortgage_details_info_icon_padding" android:drawableEnd="@drawable/ic_info_small" />
                <com.db.pwcc.dbmobile.mortgages.views.WrappedWidthTextView android:textSize="@dimen/mortgage_details_description_big" android:textColor="@color/labelViewTextColor" android:id="@id/details_protection" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mortgage_details_category_spacing" android:layout_marginBottom="@dimen/mortgage_details_scrollview_bottom_padding" android:drawablePadding="@dimen/mortgage_details_info_icon_padding" android:drawableEnd="@drawable/ic_info_small" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.db.pwcc.dbmobile.foundation.views.layouts.LoadingOverlayLayout android:id="@id/overlay_container" android:background="@color/screen_background_color" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
</RelativeLayout>