<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="?android:textColorPrimaryInverse" />
            <stroke android:width="@dimen/ub__rating_tip_circle_selection_border" android:color="?android:textColorTertiary" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="?celebrationGreen" />
            <stroke android:width="@dimen/ub__rating_tip_circle_selection_border" android:color="?celebrationGreen" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="?android:textColorPrimaryInverse" />
            <stroke android:width="@dimen/ub__rating_tip_circle_selection_border" android:color="?android:textColorTertiary" />
        </shape>
    </item>
</selector>