<?xml version="1.0" encoding="utf-8"?>
<ripple n1:color="@color/core_boolean_button_pressed"
  xmlns:n1="http://schemas.android.com/apk/res/android">
    <item n1:id="@android:id/mask">
        <shape n1:shape="oval">
            <solid n1:color="@color/core_white" />
        </shape>
    </item>
    <item>
        <selector>
            <item n1:state_selected="false">
                <shape n1:shape="oval">
                    <solid n1:color="@color/core_boolean_button_normal" />
                </shape>
            </item>
            <item n1:state_selected="true">
                <shape n1:shape="oval">
                    <solid n1:color="@color/core_boolean_button_selected" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>