<?xml version="1.0" encoding="utf-8"?>
<layer-list>
    <item>
        <selector>
            <item n1:state_pressed="false"
              xmlns:n1="http://schemas.android.com/apk/res/android">
                <shape n1:shape="rectangle">
                    <solid n1:color="@color/core_short_bg_color" />
                </shape>
            </item>
            <item n2:state_pressed="true"
              xmlns:n2="http://schemas.android.com/apk/res/android">
                <shape n2:shape="rectangle">
                    <solid n2:color="@color/core_short_bg_color_pressed" />
                </shape>
            </item>
        </selector>
    </item>
    <item n3:drawable="@drawable/core_divider"
      xmlns:n3="http://schemas.android.com/apk/res/android" />
</layer-list>