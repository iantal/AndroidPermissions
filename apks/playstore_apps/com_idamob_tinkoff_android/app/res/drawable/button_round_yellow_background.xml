<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/main_yellow_pressed" />
            <corners n1:radius="4.0dip" />
        </shape>
    </item>
    <item n2:state_enabled="false"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <solid n2:color="@color/white_transparent_06" />
            <corners n2:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape n3:shape="rectangle"
          xmlns:n3="http://schemas.android.com/apk/res/android">
            <solid n3:color="@color/main_yellow" />
            <corners n3:radius="4.0dip" />
        </shape>
    </item>
</selector>