<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <corners n1:radius="2.0dip" />
            <solid n1:color="@color/main_blue_pressed" />
        </shape>
    </item>
    <item n2:state_checked="true"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <shape n2:shape="rectangle">
            <corners n2:radius="2.0dip" />
            <solid n2:color="@color/main_blue" />
        </shape>
    </item>
    <item>
        <shape n3:shape="rectangle"
          xmlns:n3="http://schemas.android.com/apk/res/android">
            <corners n3:radius="2.0dip" />
            <solid n3:color="@color/transparent" />
            <stroke n3:width="0.5dip" n3:color="@color/white" />
        </shape>
    </item>
</selector>