<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_pressed="true"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape n1:shape="rectangle">
            <solid n1:color="@color/transparent_ripple" />
            <stroke n1:width="0.5dip" n1:color="@color/button_border" />
            <corners n1:radius="2.0dip" />
        </shape>
    </item>
    <item>
        <shape n2:shape="rectangle"
          xmlns:n2="http://schemas.android.com/apk/res/android">
            <solid n2:color="@color/transparent" />
            <stroke n2:width="0.5dip" n2:color="@color/button_border" />
            <corners n2:radius="2.0dip" />
        </shape>
    </item>
</selector>